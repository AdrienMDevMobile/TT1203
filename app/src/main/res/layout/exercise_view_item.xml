<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/img_exercise"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Image Exercise" />


    <TextView
        android:id="@+id/tv_exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="monospace"
        app:layout_constraintStart_toEndOf="@id/img_exercise"
        tools:text="Name Exercise"/>

    <Button
        android:id="@+id/btn_go_to_exercise"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/btn_go_to_exercise" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/img_exercise"
        app:layout_constraintTop_toBottomOf="@+id/img_exercise"/>

</androidx.constraintlayout.widget.ConstraintLayout>